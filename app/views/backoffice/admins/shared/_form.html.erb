<h1 class="page-header">
    Administradores</h1>


<% if @admin.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <ul>
            <% @admin.errors.full_messages.each do |message| %>
                <li>
                    <%= message %>
                </li>
                <% end %>
        </ul>
    </div>
    <% end %>


        <div class="panel panel-default">
            <div class="panel-heading">
                <%= action %>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <%= form_for [ :backoffice, @admin ] do |form| %>

                    <div class="form-group">
                        <label>Nome</label>
                        <%= form.text_field :name, class: 'form-control', placeholder: 'Nome do Administrador' %>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <%= form.text_field :email, class: 'form-control', placeholder: 'Email do Administrador' %>
                    </div>

                    <div class="form-group">
                        <label>Senha</label>
                        <%= form.password_field :password, class: 'form-control', placeholder: 'Senha' %>
                    </div>

                    <div class="form-group">
                        <label>Confirmação da Senha</label>
                        <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmação da senha' %>
                    </div>

                    <div class="form-group">
                        <label>Função</label>
                        <%= form.collection_radio_buttons(:role, options_for_roles, :id, :description) do |builder| %>
                          <div class="radio">
                            <%= builder.label { builder.radio_button + builder.text } %>
                          </div>
                        <% end %>
                    </div>  

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary form-control">Salvar</button>
                    </div>

                    <% end %>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->